{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Edit Antelope' %}

{% block head_title %}
    {{ widget_title | trans }}
{% endblock %}
{% block section_title %}
    {{ widget_title | trans }}
{% endblock %}

{% block action %}
    {{ viewActionButton(url('/antelope/view', {'id-antelope': idAntelope}), 'View' | trans) }}
    {{ backActionButton(url('/antelope'), 'Back to Antelopes' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form) }}
            {{ form_widget(form) }}

            <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
